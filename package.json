{
  "name": "sapp-system",
  "version": "1.0.0",
  "description": "Sacrament Record Management and Information System for Saint Anthony of Padua Parish",
  "main": "src/main/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "build":{
    "appId": "com.iamkramzTech.sappsystem",
    "productName": "SappSystem",
    "files":[
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamkramzTech/sapp-system.git"
  },
  "keywords": [
    "Electron",
    "desktop",
    "parish",
    "project",
    "sacrament"
  ],
  "author": "kramz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iamkramzTech/sapp-system/issues"
  },
  "homepage": "https://github.com/iamkramzTech/sapp-system#readme",
  "devDependencies": {
    "electron": "^36.4.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "electron-store": "^10.0.1",
    "mysql2": "^3.14.1"
  }
}
